<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scene_gradient" >

    <org.opencv.android.JavaCamera2View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/mOpenCvCameraView"
        opencv:show_fps="true"
        opencv:camera_id="any" />

    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/logo"
            android:contentDescription="Logo"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SLAMalyzer"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AR Mapping &amp; DR"
                android:textColor="#99FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_point_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: 0"
            android:textColor="#9CF6FF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:padding="10dp"
            android:background="@drawable/bg_panel"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_toggle_sidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_ghost"/>
    </LinearLayout>

    <!-- End Button -->
    <Button
        android:id="@+id/btn_end_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Legend Container -->
    <LinearLayout
        android:id="@+id/legend_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:orientation="vertical"
        android:background="@drawable/bg_panel"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path Legend"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="— SLAM Path (Red)"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="— DR Path (Blue)"
            android:textColor="#0000FF"/>
    </LinearLayout>

    <!-- Sensor Data Display (for DR Only) -->
    <TextView
        android:id="@+id/tv_sensor_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_panel"
        android:padding="16dp"
        android:visibility="gone"/>

    <com.vslam.orbslam3.vslamactivity.Map2DView
        android:id="@+id/map_2d_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000000"/>

    <!-- Sidebar Container -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="@drawable/bg_panel"
        android:padding="20dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale: 1.0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/mySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_close_sidebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_ghost"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <!-- Post-Processing Scale Controls -->
    <LinearLayout
        android:id="@+id/post_process_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_panel"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_post_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map Scale: 1.0"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"/>

        <SeekBar
            android:id="@+id/seekbar_post_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"/>
    </LinearLayout>

</FrameLayout>